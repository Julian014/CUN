<!DOCTYPE html>
<html>
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet"/>
    <style>
        .custom-green {
            background-color: #90c9a7;
        }
        .custom-green-text {
            color: #90c9a7;
        }
        input, select {
    color: black;
}

    </style>
</head>
<body class="bg-white font-roboto">
    <div class="max-w-4xl mx-auto p-4">
        <div class="flex items-center mb-4">
            <img alt="Company Logo" class="h-8 mr-2" src="imagenes/logo pestaña.PNG" width="50" height="50"/>
            <h1 class="text-xl font-bold custom-green-text">Vianco</h1>
        </div>
        <h2 class="text-2xl font-bold mb-4">INGRESO NUEVO EMPLEADO</h2>
<form id="empleadoForm">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-bold mb-1">Email:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="email" name="email" required>
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">Nombre:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="name" required>
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">Rol:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="roles" required>
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">Teléfono:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="phone_number" required>
                </div>
                
                <div>
                    <label class="block text-sm font-bold mb-1">Cargo:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="cargo" required>
                </div>
                <div>
    <label class="block text-sm font-bold mb-1">Salario:</label>
    <input class="w-full p-2 border border-gray-300 rounded" type="number" name="salario" step="0.01" required>
</div>
<div>
    <label class="block text-sm font-bold mb-1">Fecha de Ingreso:</label>
    <input class="w-full p-2 border border-gray-300 rounded" type="date" name="fecha_ingreso" required>
</div>

                <div>
                    <label class="block text-sm font-bold mb-1">Cliente ID:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="cliente_id" required>
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">Tipo de Documento:</label>
                    <select class="w-full p-2 border border-gray-300 rounded" name="tipo_documento">
                        <option value="CC">Cédula de Ciudadanía</option>
                        <option value="CE">Cédula de Extranjería</option>
                        <option value="Pasaporte">Pasaporte</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">Número de Documento:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="numero_documento">
                </div>
                <div>
    <label class="block text-sm font-bold mb-1">Fecha de Nacimiento:</label>
    <input class="w-full p-2 border border-gray-300 rounded" type="date" name="fecha_nacimiento" required>
</div>
                <div>
                    <label class="block text-sm font-bold mb-1">Ciudad:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="ciudad">
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">ARL:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="arl">
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">EPS:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="eps">
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">Certificación 1:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="certificacion_1">
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">Certificación 2:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="certificacion_2">
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">Certificación 3:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="certificacion_3">
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">Nombre de Emergencia:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="nombre_emergencia">
                </div>
                <div>
                    <label class="block text-sm font-bold mb-1">Contacto de Emergencia:</label>
                    <input class="w-full p-2 border border-gray-300 rounded" type="text" name="contacto_emergencia">
                </div>
            </div>
            <div class="mt-4">
        <button class="w-full p-2 custom-green text-white font-bold rounded" type="submit">Agregar Empleado</button>
            </div>
        </form>
    </div>
    <script>
document.getElementById('empleadoForm').addEventListener('submit', function(event) {
    event.preventDefault();

    const formData = new FormData(this);
    const jsonData = {};
    formData.forEach((value, key) => {
        jsonData[key] = value;
    });

    fetch('/agregar_empleado', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(jsonData)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert(data.message);
            location.reload(); // Recarga la página después de un registro exitoso
        } else {
            alert('Hubo un error al agregar el empleado: ' + data.error);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Hubo un error al agregar el empleado');
    });
});

</script>
</body>
</html>
