            position: relative;
            right: 30%;
            top: 50px;
        
        }

        .login-box {
            width: 420px;
            padding: 40px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.9);
            border-radius: 20px;
            backdrop-filter: blur(15px);
            background-size: cover;
            background-position: center;
            position: absolute;
            transition: opacity 0.3s ease, visibility 0.3s ease;
            opacity: 0;
            visibility: hidden;
        }

        .login-box.active {
            opacity: 1;
            visibility: visible;
        }

        .login-box h2 {
            margin: 0 0 20px;
            padding: 0;
            font-size: 30px;
            font-weight: 700;
            text-align: center;
            color: #413d4b;
            text-transform: uppercase;
        }

        .login-box .textbox {
            position: relative;
            margin-bottom: 25px;
        }

        .login-box .textbox input {
            width: 100%;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background: #f9f9f9;
            outline: none;
            font-size: 16px;
            color: #333;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .login-box .textbox input:focus {
            border-color: #90c9a7;
            box-shadow: 0 0 10px rgba(144, 201, 167, 0.5);
        }

        .login-box .textbox span {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            right: 12px;
            font-size: 20px;
            color: #333;
            cursor: pointer;
            transition: color 0.3s;
        }

        .login-box .textbox span:hover {
            color: #90c9a7;
        }

        .login-box .btn {
            width: 100%;
            background: #90c9a7;
            border: none;
            padding: 15px;
            cursor: pointer;
            font-size: 18px;
            color: #fff;
            border-radius: 10px;
            text-transform: uppercase;
            transition: background 0.3s, box-shadow 0.3s;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .login-box .btn:hover {
            background: #4082f5;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        .login-box .forgot-password {
            text-align: center;
            margin-top: 20px;
        }

        .login-box .forgot-password a {
            color: #90c9a7;
            text-decoration: none;
            font-size: 14px;
