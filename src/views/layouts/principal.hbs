<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Universidad CUN - Plataforma</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    :root {
      --verde: #056734;
      --amarillo: #94BD0D;
      --bg-light: #f9fafb;
      --white: #ffffff;
      --gray: #6c757d;
      --border: #e0e0e0;
      --hover: #f1f3f5;
    }

    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background-color: var(--bg-light);
      color: #343a40;
    }

    .layout {
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      width: 240px;
      background-color: var(--white);
      border-right: 1px solid var(--border);
      padding-top: 2rem;
      transition: left 0.3s ease;
    }

    .sidebar .brand {
      text-align: center;
      margin-bottom: 2rem;
    }

    .sidebar .brand img {
      width: 50px;
      height: 50px;
    }

    .sidebar .brand h5 {
      margin-top: 10px;
      font-size: 16px;
      color: var(--verde);
    }

    .nav-links a {
      display: flex;
      align-items: center;
      padding: 12px 24px;
      color: var(--gray);
      text-decoration: none;
      transition: background-color 0.2s;
    }

    .nav-links a:hover {
      background-color: var(--hover);
      color: var(--verde);
    }

    .nav-links a.active {
      color: var(--verde);
      font-weight: bold;
      background-color: #eef7f0;
      border-left: 4px solid var(--amarillo);
    }

    .content {
      flex-grow: 1;
      padding: 2rem;
      width: 100%;
    }

    .topbar {
      background-color: var(--white);
      padding: 1rem 2rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .topbar h2 {
      font-size: 20px;
      font-weight: 600;
      margin: 0;
    }

    .user-info {
      font-weight: 500;
      color: var(--verde);
    }

    footer {
      text-align: center;
      font-size: 13px;
      margin-top: 40px;
      color: #aaa;
    }

    .hamburger {
      display: none;
      background: none;
      border: none;
      font-size: 26px;
      color: var(--verde);
      cursor: pointer;
    }

    /* Responsive sidebar */
    @media (max-width: 768px) {
      .sidebar {
        position: fixed;
        left: -250px;
        top: 0;
        height: 100%;
        z-index: 999;
        background-color: var(--white);
      }

      .sidebar.show {
        left: 0;
      }

      .hamburger {
        display: block;
      }

      .content {
        padding: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="layout">
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
      <div class="brand">
        <img src="/logo_universidad.png" alt="Logo Universidad" />
        <h5>Universidad CUN</h5>
      </div>
      <nav class="nav-links">
        {{#if (eq role "2")}} <!-- Solo rol 2 ver√° estas opciones -->
          <a href="/menu" class="{{#if showNav}}active{{/if}}">üè† INICIO</a>
          <a href="/inicio_labores">üïì ASISTENCIA</a>
          <a href="/inicio_labores">üìÖ MI HORARIO</a>
          <a href="/Agregar_turno">üìÖ REGISTRAR HORARIO</a>
          
        {{/if}}
        <a href="/estadisticas_horario">üìä ESTAD√çSTICAS</a>
        <a href="/logout">üö™ CERRAR SESI√ìN</a>
      </nav>
    </aside>

    <!-- Main content -->
    <main class="content">
      <div class="topbar">
        <button class="hamburger" onclick="toggleSidebar()">‚ò∞</button>
        <h2>Panel de Control</h2>
        <div class="user-info">{{name}}</div>
      </div>

      <div class="mt-4">
        {{{ body }}}
      </div>

      <footer>
        ¬© 2025 Universidad CUN. Todos los derechos reservados.
      </footer>
    </main>
  </div>

<script>
  function toggleSidebar() {
    const sidebar = document.getElementById("sidebar");
    sidebar.classList.toggle("show");
  }

  // Cierra el sidebar si haces clic fuera en m√≥viles
  document.addEventListener("click", function (event) {
    const sidebar = document.getElementById("sidebar");
    const hamburger = document.querySelector(".hamburger");

    const isClickInsideSidebar = sidebar.contains(event.target);
    const isClickOnHamburger = hamburger.contains(event.target);

    if (!isClickInsideSidebar && !isClickOnHamburger && sidebar.classList.contains("show")) {
      sidebar.classList.remove("show");
    }
  });
</script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
