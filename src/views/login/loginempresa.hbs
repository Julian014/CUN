<body>
    <div class="background-image" id="backgroundImage"></div>

    <header>
        <img id="logo" src="/imagenes/VIANCO NEGRO .png" alt="Logo">
        <nav>
            <a href="/login">MENU ANTERIOR</a>
        </nav>
    </header>

    <div class="login-container">
        <div id="empresas" class="login-box active">
            <h2>Inicia sesión</h2>
              {{#if error}}
            <p class="error-message" style="color:red;">{{error}}</p>
            {{/if}}
            <form method="POST" action="/auth">
                <div class="textbox">
                    <input type="text" placeholder="Correo electrónico" name="email" required>
                </div>
                <div class="textbox password-container">
                    <input type="password" placeholder="Contraseña" name="password" id="password-empresas" required>
                    <span class="toggle-password" onclick="togglePasswordVisibility('password-empresas')"><i class="fas fa-eye"></i></span>
                </div>
                <button type="submit" class="btn">Entrar</button>
                <div class="forgot-password">
                    <a href="#" id="forgotPasswordLinkEmpresas">¿Olvidaste tu contraseña?</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showLogin(type) {
            // Hide all login boxes
            document.querySelectorAll('.login-box').forEach(box => {
                box.classList.remove('active');
                box.style.opacity = '0';
                box.style.visibility = 'hidden';
            });

            // Show the selected login box
            const selectedBox = document.getElementById(type);
            selectedBox.classList.add('active');
            selectedBox.style.opacity = '1';
            selectedBox.style.visibility = 'visible';

            // Add background class based on type
            document.body.className = `bg-${type}`;
        }

        function togglePasswordVisibility(id) {
            const passwordInput = document.getElementById(id);
            const passwordEyeIcon = passwordInput.nextElementSibling;
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordEyeIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                passwordInput.type = 'password';
                passwordEyeIcon.innerHTML = '<i class="fas fa-eye"></i>';
            }
        }

        // Initialize with empresas login
        showLogin('empresas');
    </script>
